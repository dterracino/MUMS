<div data-bind="visible: Torrents().length > 0">
    <h2 data-bind="text: Name"></h2>
    <ul data-bind="foreach: Torrents">
        <li data-bind="click: $root.TorrentClicked">
            <h3 data-bind="text: Name, attr: { title: Name }"></h3>
            <p>
                <!-- ko if: Label() != '' -->
                <span class="label label-inverse" data-bind="text: Label"></span>
                <!-- /ko -->
                <!-- ko if: State() == UTorrent.Enums.States.Downloading -->
                <span class="size" data-bind="text: Format.PrettySize(SizeInBytes())"></span>, 
                <span class="eta" data-bind="visible: EstimatedTimeSeconds()>0, text: Format.PrettyEta(EstimatedTimeSeconds())+' kvar'"></span>
                <!-- /ko -->
            </p>
        </li>
    </ul>
</div>